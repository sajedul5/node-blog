<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> </title>
    <link rel="stylesheet" href="assets/css/app.css">
</head>
<body>
    <%- include('./componets/nav.ejs') %>
    <header id="header">
        <div class="bannerIamge">
            <div>
                <h1>Travel blogs</h1>
                <p>Bangladesh is one of best troust country in the world.</p>
            </div>
        </div>
    </header>
    <div class="msg">
        <div class="container">
            <% if(locals.message.success) { %>
                <div class="alert-success"><%= message.success %> </div>
            <% } %>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <% if(posts.length > 0) { %>
                <% posts.forEach((post) => { %> 
                    <div class="col-3 p-20">
                        <div class="post">
                            <div class="postImg">
                                <img src="assets/img/<%= post.image %> " alt="">
                            </div>
                            <div class="postTitle">
                                <h4><a href=""><%= post.title.slice(0, 30) %>.....</a></h4>
                            </div>
                            <div class="postBody">
                                <%= post.body %>
                            </div>
                            <div class="postFooter">
                                <span class="creator"><%= post.userName %></span>
                                <span class="postTime"><%= formate(post.updatedAt, 'd,mmmm,yyyy') %></span>
                            </div>
                        </div>
                    </div>
                <% }) %> 
            <% } else { %>  
                <p>No Posts in the database!</p>
            <% } %> 
        </div>
    </div>
</body>
</html>